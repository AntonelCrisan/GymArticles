                <a href="#edit-personal-information">
                  <button id="manage-information">Manage information</button>
                </a>
            </div>
        </div>
    </div>
      <div class="container-information">
        <svg xmlns="http://www.w3.org/2000/svg" id="close-information" height="24px" viewBox="0 -960 960 960" width="24px" fill="#5f6368"><path d="m256-200-56-56 224-224-224-224 56-56 224 224 224-224 56 56-224 224 224 224-56 56-224-224-224 224Z"/></svg>
      <div class="card">
        <div class="card-body">
          <h4 class="card-title text-center">Manage information</h4>
          <form>
            <div class="form-group">
              <label>Name</label>
            <input type="text" class="form-control" id="name" name="name" autofocus>
            <div id="nameError">
            </div>
          </div>
          <div class="form-group">
          <label>Phone number</label>
          <input type="text" class="form-control" id="phone" name="phone">
          <div id="phoneError">
          </div>
        </div>
        <div class="form-group">
          <label>Date of Birth</label>
          <input type="date" id="dob" name="dob">
        <div id="dobError">
        </div>
      </div>
            <button type="submit" class="btn btn-block" id="saveButton">
              <span id="buttonText">Save</span>
              <span id="spinner" class="spinner-border spinner-border-sm d-none" role="status" aria-hidden="true"></span>
            </button>
          </form>
        </div>
      </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
