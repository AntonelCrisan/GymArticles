</head>
<body>
     <div class="navbar">
      <%- include('Navbar') %>
     </div>
      <div class="container-account">
        <div class="row">
            <div class="col-md-4 sidebar">
                <div class="profile-information text-center">
                    <div class="profile-picture"><%= user.name[0] %></div>
                    <h3><%= user.name %></h3>
                    <p><%= user.email %></p>
                </div>
                <a href="#" class="active">Personal information</a>
                <a href="#">Billing & Payments</a>
                <a href="#">Order History</a>
                <a href="#">My reviews</a>
                <a href="#">My addresses</a>
                <a href="#">Settings</a>
            </div>
            <div class="col-md-8 personal-info">
