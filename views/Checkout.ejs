    <style>
      .container-progress {
        width: 100%;
      }
      .progress-bar-custom {
        background-color: #4caf50;
      }

      .progress-labels {
        display: flex;
        justify-content: space-between;
        margin-bottom: 10px;
        font-weight: bold;
        font-size: 0.9rem;
      }

      /* Active and completed step indicator */
      .step-completed {
        color: #4caf50;
      }

      .step-pending {
        color: #888;
      }

      /* Align labels */
      .progress-step {
        flex: 1;
        text-align: center;
      }
      .progress-marker {
        width: 1.5rem;
        height: 1.5rem;
        line-height: 1.5rem;
        background-color: #ddd;
        border-radius: 50%;
        display: inline-block;
        color: white;
        font-size: 0.9rem;
      }

      /* Completed marker styling */
      .step-completed .progress-marker {
        background-color: #4caf50;
      }
    </style>
